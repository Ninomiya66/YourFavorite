<div class="container" style="height: 100vh;">
  <div class="row justify-content-center" style="height: 100%;">

    <div style="height: 100%;">

      <h2 class="text-center mt-5 mb-5">投稿一覧</h2>

      <% @reviews.each do |review| %>
      <div class="card w-50 mx-auto mt-4 shadow-lg">
        <%= link_to admin_review_path(review.id) do %>
          <%= image_tag review.image, class: "card-img-top"; %>
        <% end %>
        <div class="card-body">
          <div class="row">
            <div class="col-2"></div>
            <div class="col-10">
              <p class="card-title">
                <%= link_to admin_review_path(review.id) do %>
                <strong><i class="fas fa-desktop mr-2 text-dark"></i><span class="text-dark"><%= review.name %></span></strong>
                <% end %>
              </p>
              <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>[メーカー名] <%= review.maker %></strong></li>
                <li class="list-group-item"><strong>[ジャンル] <%= review.genre %></strong></li>
                <li class="list-group-item"><strong>[税抜価格] <%= review.price %>円</strong></li>
              </ul>
              <span><i class="fas fa-user mt-4 mr-2"></i>By <%= review.customer.name%> |</span>
              <span><%= link_to "#{review.comments.count}コメント", admin_review_path(review.id), class: "text-dark" %></span>
            </div>
          </div>
        </div>
      </div>
      <% end %>

    </div>

  </div>
</div>
