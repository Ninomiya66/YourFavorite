<div class="container" style="height: 100vh;">
  <div class="row justify-content-center" style="height: 100%;">

    <div style="height: 100%;">

      <h2 class="text-center mt-5 mb-5">会員情報編集</h2>

      <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>

      <div class="form-group">
        <%= f.label :名前 %></br>
        <%= f.text_field :name %>
      </div>

      <div class="form-group">
        <%= f.label :メールアドレス %></br>
        <%= f.text_field :email %>
      </div>

      <div class="form-group">
        <%= f.submit "保存", class: "btn btn-outline-success btn-block mt-5" %>
      </div>

      <div class="form-group">
        <%= link_to "退会する", check_customers_path, class: "btn btn-outline-danger btn-block" %>
      </div>

      <% end %>

    </div>

  </div>
</div>
