<div class="container" style="height: 100vh;">
  <div class="row justify-content-center" style="height: 100%;">

    <div style="height: 100%;">

      <h2 class="text-center mt-5 mb-5">新規投稿</h2>

      <%= form_with model: @review, url: reviews_path do |f| %>

      <table class="table">

        <tr>
            <th><%= f.label :商品画像 %></th>
            <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>

        <tr>
          <th><%= f.label :商品名 %></th>
          <td><%= f.text_field :name, placeholder: "商品名" %></td>
        </tr>

        <tr>
          <th><%= f.label :メーカー名 %></th>
          <td><%= f.text_field :maker, placeholder: "(例)〇〇会社" %></td>
        </tr>

        <tr>
          <th><%= f.label :ジャンル %></th>
          <td><%= f.text_field :genre, placeholder: "(例)マウス" %></td>
        </tr>

        <tr>
          <th><%= f.label :税抜価格 %></th>
          <td><%= f.text_field :price, placeholder: "9999" %>円</td>
        </tr>

        <tr>
          <th><%= f.label :評価内容 %></th>
          <td><%= f.text_area :introduction, size: "40x8", placeholder: "レビュー内容はここに記載してください。" %></td>
        </tr>

        <tr>
          <th><%= f.label :"公開/非公開設定" %></th>
          <td><%= f.select :status, [["公開", 0], ["非公開", 1]], {selected: 0} %></td>
        </tr>

      </table>

      <%= f.submit "投稿", class: "btn btn-outline-primary btn-block" %>

      <% end %>

    </div>

  </div>
</div>
