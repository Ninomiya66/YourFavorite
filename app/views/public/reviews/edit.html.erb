<div class="container" style="height: 100vh;">
  <div class="row justify-content-center" style="height: 100%;">

    <div style="height: 100%;">

      <h2 class="text-center mt-5 mb-5">投稿内容編集</h2>

      <div class="text-right">
        <%= link_to "投稿の削除", review_path(@review), method: :delete, class: "btn btn-outline-danger mb-3", data: { confirm: "【確認] 投稿を削除しますか？" } %>
      </div>

      <%= form_with model: @review, url: review_path, method: :patch do |f| %>

      <table class="table">

        <tr>
          <th><%= f.label :商品画像 %></th>
          <td><%= f.file_field :image %></td>
        </tr>

        <tr>
          <th>商品名</th>
          <td><%= f.text_field :name %></td>
        </tr>

        <tr>
          <th>メーカー名</th>
          <td><%= f.text_field :maker %></td>
        </tr>

        <tr>
          <th>ジャンル</th>
          <td><%= f.text_field :genre %></td>
        </tr>

        <tr>
          <th>税抜価格</th>
          <td><%= f.text_field :price %>円</td>
        </tr>

        <tr>
          <th>評価内容</th>
          <td><%= f.text_area :introduction, size: "40x8" %></td>
        </tr>

        <tr>
          <th>公開/非公開設定</th>
          <td><%= f.select :status, [["公開", 1], ["非公開", 2]] %></td>
        </tr>

      </table>

      <%= f.submit "保存", class: "btn btn-outline-success btn-block" %>
      <%= link_to "Back", reviews_path, class: "btn btn-outline-info btn-block" %>

      <% end %>

    </div>

  </div>
</div>

