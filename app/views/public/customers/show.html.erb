<div class="container" style="height: 100vh;">
  <div class="row justify-content-center" style="height: 100%;">

    <div style="height: 100%;">

      <h2 class="text-center mt-5 mb-5">My Page</h2>

      <div class="row justify-content-center">

        <h4 class="mt-2 mb-4">登録者情報</h4>

        <table class="table">

          <tr>
            <th>名前</th>
            <td><%= @customer.name %></td>
          </tr>

          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>

        </table>

        <%= link_to edit_customer_path, class: "btn btn-block bg-light" do %>
        <i class="fas fa-cog"></i>
        <% end %>

      </div>

    </div>

  </div>
</div>
