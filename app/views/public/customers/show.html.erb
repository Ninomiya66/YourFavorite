<div class="container" style="height: 100vh;">
  <div class="row justify-content-center" style="height: 100%;">

    <div style="height: 100%;">

      <h2 class="text-center mt-5 mb-5">My Page</h2>

      <div class="row justify-content-center">

        <h4 class="mt-2 mb-4">登録者情報</h4>

        <table class="table">

          <tr>
            <th>名前</th>
            <td><%= @customer.name %></td>
          </tr>

          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>

        </table>

        <%= link_to edit_customer_path, class: "btn btn-block bg-light" do %>
        <i class="fas fa-cog"></i>
        <% end %>

        <% @reviews.each do |review| %>
        <table class="table table-hover mt-3">
          <thead>
            <tr>
              <th></th>
              <th>商品名</th>
              <th>メーカー名</th>
              <th>ジャンル</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <tr>
              <td></td>
              <td>
                <%= link_to review_path(review) do %>
                <%= review.name %>
                <% end %>
              </td>
              <td><%= review.maker %></td>
              <td><%= review.genre %></td>
              <td><%= link_to "編集", edit_review_path(review) %></td>
            </tr>
          </tbody>

        </table>
        <% end %>

      </div>

    </div>

  </div>
</div>
